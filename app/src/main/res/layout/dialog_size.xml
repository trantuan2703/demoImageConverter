<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Size"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_margin="20dp">
    </TextView>
    <RadioGroup
        android:id="@+id/rg_size_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rb_05x"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_5x"
            android:textSize="20sp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:textColor="@color/blue_1"
            android:buttonTint="@color/blue_1">
        </RadioButton>
        <RadioButton
            android:id="@+id/rb_1x"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1x"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="@color/blue_1"
            android:buttonTint="@color/blue_1"
            tools:ignore="RtlSymmetry">
        </RadioButton>
        <RadioButton
            android:id="@+id/rb_15x"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_5x"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="@color/blue_1"
            android:buttonTint="@color/blue_1"
            tools:ignore="RtlSymmetry">
        </RadioButton>
        <RadioButton
            android:id="@+id/rb_2x"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2x"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="@color/blue_1"
            android:buttonTint="@color/blue_1"
            tools:ignore="RtlSymmetry">
        </RadioButton>
        <RadioButton
            android:id="@+id/rb_3x"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3x"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textColor="@color/blue_1"
            android:buttonTint="@color/blue_1"
            tools:ignore="RtlSymmetry">
        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imv_dialog_size_check"
            android:src="@drawable/ic_check"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:elevation="2dp">
        </ImageView>
        <ImageView
            android:id="@+id/imv_dialog_size_close"
            android:src="@drawable/ic_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:elevation="2dp">
        </ImageView>
    </LinearLayout>
</LinearLayout>