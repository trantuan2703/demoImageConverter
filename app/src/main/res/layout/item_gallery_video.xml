<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="96dp"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imv_item_gallery_video_thumb"
        android:layout_width="128dp"
        android:layout_height="96dp"
        tools:ignore="ContentDescription">
    </ImageView>
    <TextView
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imv_item_gallery_video_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_gallery_video_title"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginEnd="30dp"
        tools:ignore="RelativeOverlap">
    </TextView>
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_menu"
        android:id="@+id/imv_gallery_video_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/open_more_option">
    </ImageView>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imv_item_gallery_video_thumb"
        android:layout_below="@id/tv_item_gallery_video_title"
        android:id="@+id/tv_item_gallery_video_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/tv_item_gallery_video_date"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    </TextView>
</RelativeLayout>